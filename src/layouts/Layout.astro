---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title?: string;
}

const { title = "GlobalWord Mission | Translating Scripture. Transforming Lives." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="GlobalWord Mission helps translate Scripture into previously unreached languages and build mature churches that transform communities worldwide." />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&family=Source+Sans+Pro:wght@400;600;700&display=swap" rel="stylesheet">
		
		<ViewTransitions />
	</head>
	<body class="font-sans">
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
  
	.animation-delay-200 {
		animation-delay: 0.2s;
	}
  
	.animation-delay-300 {
		animation-delay: 0.3s;
	}
  
	.animation-delay-400 {
		animation-delay: 0.4s;
	}
</style>