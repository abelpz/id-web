---
const donationOptions = [
  {
    amount: "$10",
    title: "Un Versículo",
    description: "Apoya la traducción de un versículo bíblico a un idioma no alcanzado.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>`
  },
  {
    amount: "$50",
    title: "Un Capítulo",
    description: "Contribuye a la traducción de un capítulo completo de la Biblia.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
    </svg>`
  },
  {
    amount: "$100",
    title: "Un Libro",
    description: "Ayuda a traducir un libro completo del Nuevo Testamento.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
    </svg>`
  }
];

const volunteerSupport = [
  {
    amount: "$25",
    title: "Una Hora",
    description: "Apoya una hora del trabajo de un traductor voluntario.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    amount: "$200",
    title: "Un Día",
    description: "Sostén el trabajo de un traductor por un día completo.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>`
  },
  {
    amount: "$1,000",
    title: "Una Semana",
    description: "Permite que un traductor se dedique una semana completa a su labor.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>`
  }
];
---

<section id="donation-impact" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-primary-900 mb-4">Tu Donación Hace la Diferencia</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-6"></div>
      <p class="text-lg text-earth-700">Cada donación contribuye directamente a la traducción de la Biblia y al sostenimiento de nuestros traductores voluntarios.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
      <div>
        <h3 class="text-2xl font-bold text-primary-800 mb-8 text-center">Impacto en la Traducción</h3>
        <div class="grid grid-cols-1 gap-6">
          {donationOptions.map(option => (
            <div class="bg-earth-50 rounded-lg shadow-md p-6 flex items-start gap-4">
              <div class="text-primary-600" set:html={option.icon}></div>
              <div>
                <div class="text-2xl font-bold text-primary-700 mb-2">{option.amount}</div>
                <h4 class="text-xl font-bold text-primary-800 mb-2">{option.title}</h4>
                <p class="text-earth-600">{option.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div>
        <h3 class="text-2xl font-bold text-primary-800 mb-8 text-center">Apoya a Nuestros Voluntarios</h3>
        <div class="grid grid-cols-1 gap-6">
          {volunteerSupport.map(option => (
            <div class="bg-earth-50 rounded-lg shadow-md p-6 flex items-start gap-4">
              <div class="text-primary-600" set:html={option.icon}></div>
              <div>
                <div class="text-2xl font-bold text-primary-700 mb-2">{option.amount}</div>
                <h4 class="text-xl font-bold text-primary-800 mb-2">{option.title}</h4>
                <p class="text-earth-600">{option.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <div class="max-w-2xl mx-auto bg-primary-50 rounded-lg shadow-md p-8 text-center">
      <h3 class="text-2xl font-bold text-primary-900 mb-4">¿Listo para Donar?</h3>
      <p class="text-earth-600 mb-6">Tu generosidad permite que la Palabra de Dios llegue a más personas en su idioma materno.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#donate" class="bg-primary-700 hover:bg-primary-800 text-white font-semibold py-3 px-8 rounded-md transition-colors duration-200">
          Donar Ahora
        </a>
        <a href="#contact" class="bg-white hover:bg-earth-50 text-primary-700 font-semibold py-3 px-8 rounded-md border border-primary-700 transition-colors duration-200">
          Contactar para Más Información
        </a>
      </div>
    </div>
  </div>
</section> 