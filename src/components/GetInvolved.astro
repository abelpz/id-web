<section id="get-involved" class="py-20 bg-primary-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-serif font-bold text-primary-900 mb-4">Get Involved</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-6"></div>
      <p class="text-lg text-earth-700">Join us in bringing God's Word to every language and building mature churches worldwide.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {ways.map(way => (
        <div class="bg-white rounded-lg shadow-md p-6 flex">
          <div class={`w-12 h-12 ${way.color} rounded-lg flex items-center justify-center flex-shrink-0 mr-4`}>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-700">
              <path stroke-linecap="round" stroke-linejoin="round" d={way.icon} />
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-serif font-bold text-primary-800 mb-2">{way.title}</h3>
            <p class="text-earth-600 mb-4">{way.description}</p>
            <a href="#" class="inline-flex items-center text-primary-700 hover:text-primary-900 font-medium">
              {way.linkText}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div id="donate" class="mt-16 rounded-lg overflow-hidden shadow-lg">
      <div class="bg-gradient-to-r from-primary-800 to-primary-900 p-8 md:p-12">
        <div class="md:flex items-center justify-between">
          <div class="md:w-2/3 mb-8 md:mb-0">
            <h3 class="text-2xl md:text-3xl font-serif font-bold text-white mb-4">Your Gift Makes a Difference</h3>
            <p class="text-white/80">Every dollar brings us closer to our goal of making Scripture accessible to every language community on earth.</p>
          </div>
          <div>
            <a href="#" class="inline-block bg-accent-600 hover:bg-accent-700 text-white font-semibold py-3 px-8 rounded-md transition-colors duration-200">
              Give Now
            </a>
          </div>
        </div>
      </div>
      <div class="bg-white p-8 md:p-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <p class="text-4xl font-serif font-bold text-primary-800 mb-2">$35</p>
            <p class="text-earth-600">Translates one verse</p>
          </div>
          <div class="text-center">
            <p class="text-4xl font-serif font-bold text-primary-800 mb-2">$1,000</p>
            <p class="text-earth-600">Sponsors a chapter</p>
          </div>
          <div class="text-center">
            <p class="text-4xl font-serif font-bold text-primary-800 mb-2">$35,000</p>
            <p class="text-earth-600">Completes a book</p>
          </div>
        </div>
        <div class="mt-8">
          <form class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="md:col-span-3">
              <input type="email" placeholder="Enter your email for our newsletter" class="w-full px-4 py-3 border border-earth-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
            </div>
            <div>
              <button type="submit" class="w-full bg-primary-700 hover:bg-primary-800 text-white font-semibold py-3 px-6 rounded-md transition-colors duration-200">
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>