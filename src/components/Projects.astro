---
const projects = [
  {
    title: "Southeast Asia Bible Translation",
    language: "Mien Language Group",
    progress: 75,
    image: "https://images.pexels.com/photos/7944238/pexels-photo-7944238.jpeg",
    description: "Working with local translators to complete the New Testament in 5 related dialects, reaching over 300,000 speakers."
  },
  {
    title: "East Africa Scripture Access",
    language: "Maasai Communities",
    progress: 45,
    image: "https://images.pexels.com/photos/8960464/pexels-photo-8960464.jpeg",
    description: "Translating key biblical books and developing literacy materials for nomadic communities across the region."
  },
  {
    title: "Central Asian Languages Project",
    language: "Kyrgyz & Related Languages",
    progress: 60,
    image: "https://images.pexels.com/photos/8467280/pexels-photo-8467280.jpeg",
    description: "Providing modern Scripture translations with cultural relevancy and digital distribution in challenging contexts."
  },
  {
    title: "Pacific Islands Translation Initiative",
    language: "Multiple Island Languages",
    progress: 30,
    image: "https://images.pexels.com/photos/5752226/pexels-photo-5752226.jpeg",
    description: "Supporting remote island communities with Scripture portions and discipleship materials in 12 languages."
  }
];
---

<section id="projects" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-serif font-bold text-primary-900 mb-4">Current Projects</h2>
      <div class="w-20 h-1 bg-accent-500 mx-auto mb-6"></div>
      <p class="text-lg text-earth-700">Ongoing translation work that's bringing God's Word to communities around the world in their heart languages.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="bg-earth-50 rounded-lg overflow-hidden shadow-md">
          <div class="relative h-56 overflow-hidden">
            <img src={project.image} alt={project.title} class="w-full h-full object-cover transition-transform duration-500 hover:scale-110" />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
              <h3 class="text-xl font-serif font-bold text-white">{project.title}</h3>
              <p class="text-white/80 text-sm">{project.language}</p>
            </div>
          </div>
          <div class="p-6">
            <div class="mb-4">
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium text-earth-700">Translation Progress</span>
                <span class="text-sm font-medium text-earth-700">{project.progress}%</span>
              </div>
              <div class="w-full bg-earth-200 rounded-full h-2">
                <div class="bg-primary-600 h-2 rounded-full" style={`width: ${project.progress}%`}></div>
              </div>
            </div>
            <p class="text-earth-600 mb-4">{project.description}</p>
            <a href="#" class="inline-flex items-center text-primary-700 hover:text-primary-900 font-medium">
              Learn more about this project
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <a href="#" class="inline-flex items-center justify-center bg-primary-700 hover:bg-primary-800 text-white font-semibold py-3 px-8 rounded-md transition-colors duration-200">
        View All Projects
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>